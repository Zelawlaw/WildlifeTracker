{{> headerandnav}}

<div class="container">
    <h1>Add Animal</h1>
    <form action="/animal" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
        </div>

        <div class="form-group">
            <label for="isEndangered" class="col-sm-2 control-label">Is Endangered?</label>
            <div class="col-sm-10">
                <input type="checkbox" id="isEndangered" name="isEndangered">
            </div>
        </div>

        <div id="endangeredOptions" style="display: none;">
            <div class="form-group">
                <label for="health" class="col-sm-2 control-label">Health:</label>
                <div class="col-sm-10">
                    <select id="health" name="health" class="form-control">
                        <option></option>
                        <option value="HEALTHY">Healthy</option>
                        <option value="ILL">Ill</option>
                        <option value="OKAY">Okay</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="age" class="col-sm-2 control-label">Age:</label>
                <div class="col-sm-10">
                    <select id="age" name="age" class="form-control">
                        <option></option>
                        <option value="NEWBORN">Newborn</option>
                        <option value="YOUNG">Young</option>
                        <option value="ADULT">Adult</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input id="submitBtn" type="submit" value="Add Animal" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>

<script src="/js/addform.js"></script>

{{> footer}}
